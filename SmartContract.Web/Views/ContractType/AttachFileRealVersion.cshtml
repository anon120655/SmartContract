
@model SmartContract.Infrastructure.Resources.ContractTypeVendor.TAllMasterVendorView
@using SmartContract.Utils;

@{
    string _ItemStatusCurr = Model.ContractStation.ItemStatusCurr;
    var infoFileReal = Model.InfoAttachFileRealVersion;
}

<div>
    <section>
        <div class="">
            <div class="col-md-12">
                <div class="form-group">
                    <label class="lable_blue" for=""><i class="fa fa-th-list mr-1 mb-2"></i>แนบไฟล์แสกน นิติกรรมสัญญา(ฉบับจริง)</label>
                    @if (!infoFileReal.SmctMasterFile.Any(x => x.FileType == "F3") && _ItemStatusCurr == ContractStationStatusItemAll.S53WaitSigningNhso)
                    {
                        <fieldset>
                            <div id="AttachfileReal_Rander">
                                <div class="Attachfile_Sub form-row col-12 form_create">
                                    <div class="form-group form-group-file col-12 col-sm-12 col-md-12 col-lg-12 col-xl-12">
                                        <div class="col-4">
                                            <div class="custom-file">
                                                <input type="file" class="custom-file-input" title=""
                                                       name="InfoAttachFileRealVersion.SmctMasterFile[0].FormFile">
                                                <input type="hidden" name="InfoAttachFileRealVersion.SmctMasterFile[0].IdSmctMasterFile" value="">
                                                <label class="custom-file-label" for="customFile">Choose file</label>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </fieldset>
                        <section>
                            <div class="">
                                <div class="col-md-12">
                                    <div class="form-group">
                                        <label class="lable_blue" for="">NHSO CA Gateway</label>
                                    </div>
                                    <div class="form-group row">
                                        <label for="" class="col-sm-1 col-form-label text-right">Username</label>
                                        <div class="col-sm-3">
                                            <input type="text" class="form-control" readonly
                                                   asp-for="ApproveProposal.UserNameCA">
                                        </div>
                                    </div>
                                    <div class="form-group row">
                                        <label for="" class="col-sm-1 col-form-label text-right">Password</label>
                                        <div class="col-sm-3">
                                            <input type="password" class="form-control"
                                                   asp-for="ApproveProposal.PasswordCA">
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </section>
                        <div class="form-group col-12 col-sm-12 col-md-12 col-lg-12 col-xl-3 text-center">
                            <input type="hidden" asp-for="ParameterCondition.IsShowSign" />
                            <button type="submit" class="btn btn-success ml-3" name="BtnSubmit" value="41"> บันทึกไฟล์แสกน </button>
                        </div>
                    }
                    else
                    {

                        <input type="text" readonly class="form-control-plaintext text-warning" value="รอหน่วยบริการลงนาม">
                    }
                </div>
            </div>
        </div>
    </section>

</div>