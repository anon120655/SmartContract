
@model SmartContract.Infrastructure.Resources.ContractTypeVendor.TAllMasterVendorView

@{
    Layout = null;
    var indata = Model.InfoConDetail.ContractDetail06;
    var indataBank = Model.CTVendor.GetLookUp.VDFiBankVendorList;
}

<section>
    <div class="">
        <div class="col-md-12">
            <div class="form-group row">
                <label class="lable_blue" for=""><i class="fa fa-th-list mr-1 mb-2"></i>ข้อที่ 1 สำนักงานตกลงให้สถานบริการ</label>
            </div>
            <div class="form-group row">
                <label class="col-sm-3 col-form-label text-sm-right">ชื่อกิจกรรมบริการ :</label>
                <div class="col-sm-7">
                    <input type="text" class="form-control " asp-for="InfoConDetail.ContractDetail06.P1">
                </div>
            </div>
            <div class="form-group row">
                <label class="col-sm-12 col-form-label h3"><span class="h5">ข้อที่ 2 เอกสารภาคผนวกแนบท้ายสัญญา</span></label>
            </div>
            <div class="form-group row">
                <label class="col-sm-3 col-form-label text-sm-right">2.1 ผนวก 1 กิจกรรมบริการ :</label>
                <div class="col-sm-5 ">
                    <input type="text" class="form-control " asp-for="InfoConDetail.ContractDetail06.P2">
                </div>
                <label class="col-sm-1 col-form-label text-sm-right">จำนวน :</label>
                <div class="col-sm-1">
                    <input type="number" class="form-control " asp-for="InfoConDetail.ContractDetail06.P3">
                </div>
                <label class="col-sm-1 col-form-label">หน้า</label>
            </div>
            <div class="form-group row">
                <label class="col-sm-3 col-form-label text-sm-right">2.2 ผนวก 2 ประกาศ/หลักเกณฑ์/มติ/คู่มือ/แนวทางปฏิบัติ/วิธีการเงื่อนไขการจ่ายค่าใช้จ่าย :</label>
                <div class="col-sm-5 ">
                    <input type="text" class="form-control " asp-for="InfoConDetail.ContractDetail06.P4">
                </div>
                <label class="col-sm-1 col-form-label text-sm-right">จำนวน :</label>
                <div class="col-sm-1">
                    <input type="number" class="form-control " asp-for="InfoConDetail.ContractDetail06.P5">
                </div>
                <label class="col-sm-1 col-form-label">หน้า</label>
            </div>
            <div class="form-group row">
                <label class="col-sm-3 col-form-label text-sm-right">2.3 ผนวก 3 :</label>
                <div class="col-sm-5 ">
                    <input type="text" class="form-control " asp-for="InfoConDetail.ContractDetail06.P6">
                </div>
                <label class="col-sm-1 col-form-label text-sm-right">จำนวน :</label>
                <div class="col-sm-1">
                    <input type="number" class="form-control " asp-for="InfoConDetail.ContractDetail06.P7">
                </div>
                <label class="col-sm-1 col-form-label">หน้า</label>
            </div>
            <div class="form-group row">
                <label class="lable_blue" for=""><i class="fa fa-th-list mr-1 mb-2"></i>ข้อที่ 3 สำนักงานตกลงจ่ายชดเชยการให้บริการสาธารณสุขตามกิจกรรมบริการ</label>
            </div>
            @if (indataBank != null && indataBank.Count() == 1)
            {
                var _indataBank = indataBank.FirstOrDefault();

                <div class="form-group row">
                    <label class="col-sm-3 col-form-label text-sm-right">ชื่อธนาคาร :</label>
                    <div class="col-sm-7">
                        <input type="text" class="form-control-plaintext text-primary" value="@(!String.IsNullOrEmpty(_indataBank.BanksName.Trim()) ?_indataBank.BanksName : "-")">
                    </div>
                    <label class="col-sm-3 col-form-label text-sm-right">สาขา :</label>
                    <div class="col-sm-7">
                        <input type="text" class="form-control-plaintext text-primary" value="@(!String.IsNullOrEmpty(_indataBank.BanksBranch.Trim()) ?_indataBank.BanksBranch : "-")">
                    </div>
                    <label class="col-sm-3 col-form-label text-sm-right">ชื่อบัญชี :</label>
                    <div class="col-sm-7">
                        <input type="text" class="form-control-plaintext text-primary" value="@(!String.IsNullOrEmpty(_indataBank.BanksAccName.Trim()) ?_indataBank.BanksAccName : "-")">
                    </div>
                    <label class="col-sm-3 col-form-label text-sm-right">เลขที่บัญชี :</label>
                    <div class="col-sm-7">
                        <input type="text" class="form-control-plaintext text-primary" value="@(!String.IsNullOrEmpty(_indataBank.BanksAccNo.Trim()) ?_indataBank.BanksAccNo : "-")">
                    </div>
                </div>
            }
            else
            {
                <div class="form-group row">
                    <label class="col-sm-3 col-form-label text-sm-right">ชื่อธนาคาร :</label>
                    <div class="col-sm-7">
                        <input type="text" class="form-control-plaintext text-primary" value="-">
                    </div>
                    <label class="col-sm-3 col-form-label text-sm-right">สาขา :</label>
                    <div class="col-sm-7">
                        <input type="text" class="form-control-plaintext text-primary" value="-">
                    </div>
                    <label class="col-sm-3 col-form-label text-sm-right">ชื่อบัญชี :</label>
                    <div class="col-sm-7">
                        <input type="text" class="form-control-plaintext text-primary" value="-">
                    </div>
                    <label class="col-sm-3 col-form-label text-sm-right">เลขที่บัญชี :</label>
                    <div class="col-sm-7">
                        <input type="text" class="form-control-plaintext text-primary" value="-">
                    </div>
                </div>
            }

        </div>
    </div>
</section>

