
@model SmartContract.Infrastructure.Resources.ContractTypeVendor.TAllMasterVendorView
@using SmartContract.Utils;

@{

    var indata = Model.InfoAttachFileRealVersion;
    string _ContractTypeId = Model.ParameterCondition.ContractTypeId;
}

<div>
    <section>
        <div class="">
            <div class="col-md-12">
                <div class="form-group">
                    <label class="lable_blue" for=""><i class="fa fa-th-list mr-1 mb-2"></i>แนบไฟล์แสกน นิติกรรมสัญญา(ฉบับจริง)</label>
                    <fieldset>
                        <div id="AttachfileReal_Rander">
                            <table class="table table-hover" style="width:50%">
                                <tbody>
                                    @if (indata != null && indata.SmctMasterFile != null && indata.SmctMasterFile.Where(x => x.FileType == "F3").Count() > 0)
                                    {
                                        int index_file = 0;
                                        foreach (var item_file in indata.SmctMasterFile.Where(x => x.FileType == "F3"))
                                        {
                                            index_file++;
                                            String pathFolder = $"Attach\\T{_ContractTypeId}\\{item_file.PathFolder}";
                                            <tr>
                                                <td>@(index_file)</td>
                                                <td class="text-primary">@item_file.FileName</td>
                                                <td>
                                                    <a asp-action="Render"
                                                       asp-controller="Files"
                                                       asp-route-fileftp="@(item_file.FileFtp)"
                                                       asp-route-type="@(pathFolder)"
                                                       target="_blank" class="ml-3">
                                                        <i class="fas fa-file-pdf fa-lg"></i> View
                                                    </a>
                                                </td>
                                            </tr>
                                        }
                                    }
                                </tbody>
                            </table>
                        </div>
                    </fieldset>
                </div>
            </div>
        </div>
    </section>
</div>