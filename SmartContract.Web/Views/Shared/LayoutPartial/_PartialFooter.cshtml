
@inject SmartContract.Infrastructure.Interfaces.Authenticate.IUserService UserService
@using Microsoft.Extensions.Options;
@using SmartContract.Infrastructure.Helpers;

@inject IOptions<AppSettings> _mySet


@{
    Layout = null;
    string Current = DateTime.Now.ToString("d MMMM yyyy เวลา HH:mm น", new System.Globalization.CultureInfo("th-TH"));
}

<style>
    .blue-color {
        color: blue;
    }

    .orangered-color {
        color: orangered
    }

    .dodgerblue-color {
        color: dodgerblue
    }
</style>


<!-- Footer -->
<footer class="page-footer font-small mdb-color">
    <div class="col-md-12 text-right">
        <div class="text-primary font-weight-bold">
            ข้อมูล ณ วันที่ @Current
        </div>
    </div>
    <!-- online user count -->
    <div class="col-md-12 text-right bg-dark">
        <div class="m-0 p-0 mt-3  bg-dark">
            <b>ผู้ออนไลน์ : </b>
            <span id="countUser"></span> &nbsp;&nbsp;
            <b>จำนวนผู้เข้าใช้งาน : </b>
            @(UserService.CountlogUser())
        </div>
    </div>
    <!-- Footer Links -->
    <div class=" text-center text-md-left bg-dark">
        <div class="container">

            <!-- Footer links -->
            <div class="row text-center text-md-left">


            </div>
        </div>
        <!-- Footer links -->
        <hr>

        <!-- Grid row -->
        <div class=" d-flex align-items-center">

            <!-- Grid column -->
            <div class="col-md-7 col-lg-8">

                <!--Copyright-->
                <p class="text-center text-md-left">
                    © 2021 Copyright: Version @_mySet.Value.SiteUpdate
                </p>

            </div>
            <!-- Grid column -->
            <!-- Grid column -->
            <div class="col-md-5 col-lg-4 ml-lg-0 ">

                <!-- Social buttons -->
                <div class="text-center text-md-right">
                    <ul class="list-unstyled list-inline">
                        <li class="list-inline-item">
                            <a class="btn-floating btn-sm rgba-white-slight mx-1">
                                <i class="fab fa-chrome fa-2x blue-color"></i>
                            </a>
                        </li>
                        <li class="list-inline-item">
                            <a class="btn-floating btn-sm rgba-white-slight mx-1">
                                <i class="fab fa-firefox fa-2x orangered-color"></i>
                            </a>
                        </li>
                        <li class="list-inline-item">
                            <a class="btn-floating btn-sm rgba-white-slight mx-1">
                                <i class="fab fa-edge fa-2x dodgerblue-color"></i>
                            </a>
                        </li>
                    </ul>
                </div>

            </div>
            <!-- Grid column -->

        </div>
        <!-- Grid row -->

    </div>
    <!-- Footer Links -->

</footer>
