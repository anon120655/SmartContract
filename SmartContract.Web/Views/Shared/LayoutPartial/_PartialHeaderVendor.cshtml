
@inject SmartContract.Infrastructure.Interfaces.Authenticate.IUserService UserService
@using Microsoft.AspNetCore.Http

@{
    Layout = null;
}


<style>
    .fa, .fas, .far, .fal, .fad, .fab {
        /*font-family: 'Font Awesome 5 Free';*/
        font-weight: 100;
        font-style: normal;
        font-variant: normal;
        /*text-rendering: auto;*/
        /*line-height: 2;*/
    }
</style>

<section id="topbar" class="d-flex align-items-center text-light" style="background-color: #ff8e07d1;">
    <div class="col-md-12">
        <div class="d-flex justify-content-center justify-content-md-between">
            <div class="contact-info d-flex align-items-center mt-3 mb-3">
                <i class="fas fa-user mr-3"><span class="ml-1">@UserService.GetUserFullName()</span></i>
                <i class="fas fa-id-card mr-3">
                    @if (!String.IsNullOrEmpty(UserService.GetVendorId()))
                    {
                        <span class="ml-1">@(UserService.GetVendorName())(@UserService.GetVendorId())</span>
                    }
                    else
                    {
                        <span class="ml-1 text_red_header">(ไม่มีรหัสคู่สัญญา)</span>
                    }
                </i>
                <i class="fas fa-star mr-3"><span class="ml-1">@(UserService.GetRoleFullName())(@UserService.GetRoleShotName())</span></i>
            </div>
            @*<div class="social-links d-none d-md-flex align-items-center">
                    <i><a class="fas fa-comment-alt text-light"> แจ้งเตือน</a><span style="vertical-align:top;" class="badge badge-pill badge-danger">1</span></i>

                </div>*@
        </div>
    </div>
</section>